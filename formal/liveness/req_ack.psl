vunit formal_req_ack(req_ack(rtl)) { 
   -----------------------------------------------------------------
   -- Assumptions
   -----------------------------------------------------------------
	default clock is rising_edge(clk);

    assume always (req -> req until ack);

  -----------------------------------------------------------------
   -- Assertions
   -----------------------------------------------------------------

  req_then_ack : assert always {req} |-> { [*0 to 5]; ack}; 
	-----------------------------------------------------------------
	-- Cover
  -----------------------------------------------------------------
}